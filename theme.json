{
    "$schema": "https://schemas.wp.org/wp/6.5/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": true
    },
    "styles": {
        "typography": {
            "fontFamily": "'inter', Verdana , Arial, sans-serif",
            "fontSize": "14px",
            "fontStyle": "normal",
            "fontWeight": "400",
            "lineHeight": "1.55"
        },
        "color": {
            "background": "#d5d6d7",
            "text": "#333"
        },
        "elements": {
            "heading": {
                "typography": {
                    "fontFamily": "Arial, sans-serif",
                    "fontWeight": "400",
                    "lineHeight": "1.2"
                }
            },
            "link": {
                ":hover": {
                    "color": {
                        "text": "#147"
                    },
                    "typography": {
                        "textDecoration": "underline"
                    }
                },
                "color": {
                    "text": "#06c"
                },
                "typography": {
                    "textDecoration": "none"
                }
            }
        }
    },
    "templateParts": [
        {
            "area": "header",
            "name": "header",
            "title": "Header"
        },
        {
            "area": "footer",
            "name": "footer",
            "title": "My Footer"
        }
    ]
}